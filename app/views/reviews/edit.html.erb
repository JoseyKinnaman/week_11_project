<div>
  <h1>Modify a review</h2>
    <%= form_for [@product, @review] do |f| %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :review_content %>
      <%= f.text_area :content_body %>

      <%= f.label :rating %>  

      <%= f.label :rating, "1" %>
      <%= f.radio_button(:rating, "1") %> 

      <%= f.label :rating, "2" %>
      <%= f.radio_button(:rating, "2") %> 

      <%= f.label :rating, "3" %>
      <%= f.radio_button(:rating, "3") %> 

      <%= f.label :rating, "4" %>
      <%= f.radio_button(:rating, "4") %> 

      <%= f.label :rating, "5" %>
      <%= f.radio_button(:rating, "5") %> 

      <p><%= f.submit %></p>
  <%end%>
</div>